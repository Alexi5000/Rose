# Development Environment Configuration
# This file contains development-specific settings
# Copy to .env for local development

# ============================================
# ENVIRONMENT
# ============================================
ENVIRONMENT=development

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=8080
HOST=127.0.0.1

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Allow all origins in development
ALLOWED_ORIGINS="*"

# Relaxed rate limiting for development
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=100

# Security headers (can be disabled for easier debugging)
ENABLE_SECURITY_HEADERS=false

# ============================================
# LOGGING CONFIGURATION
# ============================================
# Verbose logging for development
LOG_LEVEL=DEBUG
LOG_FORMAT=console

# ============================================
# API DOCUMENTATION
# ============================================
# Enable API docs in development
ENABLE_API_DOCS=true

# ============================================
# WORKFLOW CONFIGURATION
# ============================================
# Longer timeout for debugging
WORKFLOW_TIMEOUT_SECONDS=120

# ============================================
# RESOURCE MANAGEMENT
# ============================================
# Generous limits for development
MAX_REQUEST_SIZE=52428800  # 50MB
SESSION_RETENTION_DAYS=1  # Clean up daily for testing

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Local Qdrant instance
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# ============================================
# REQUIRED API KEYS (must be set)
# ============================================
GROQ_API_KEY=
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=
