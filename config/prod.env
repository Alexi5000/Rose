# Production Environment Configuration
# This file contains production-specific settings
# Deploy to Railway production environment with these settings

# ============================================
# ENVIRONMENT
# ============================================
ENVIRONMENT=production

# ============================================
# SERVER CONFIGURATION
# ============================================
# Railway sets PORT automatically
PORT=8080
HOST=0.0.0.0

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Restrict to production frontend domain(s)
# Update with your actual production domain(s)
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# Strict rate limiting for production
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=10

# Enable all security headers
ENABLE_SECURITY_HEADERS=true

# ============================================
# LOGGING CONFIGURATION
# ============================================
# Structured logging for production
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# API DOCUMENTATION
# ============================================
# Disable API docs in production for security
ENABLE_API_DOCS=false

# ============================================
# WORKFLOW CONFIGURATION
# ============================================
# Strict timeout for production
WORKFLOW_TIMEOUT_SECONDS=60

# ============================================
# RESOURCE MANAGEMENT
# ============================================
# Production limits
MAX_REQUEST_SIZE=10485760  # 10MB
SESSION_RETENTION_DAYS=7  # Weekly cleanup

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Qdrant Cloud instance (production)
# Set these in Railway environment variables
QDRANT_URL=
QDRANT_API_KEY=

# ============================================
# REQUIRED API KEYS (set in Railway)
# ============================================
GROQ_API_KEY=
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=

# ============================================
# TEXT-TO-SPEECH TUNING
# ============================================
TTS_STREAMING_LATENCY_LEVEL=0
TTS_OUTPUT_FORMAT=mp3_44100_128
TTS_USE_SPEAKER_BOOST=true

# ============================================
# MONITORING & ALERTING
# ============================================
# Sentry error tracking (optional but recommended)
# Get your DSN from https://sentry.io
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1  # 10% of transactions
SENTRY_PROFILES_SAMPLE_RATE=0.1  # 10% of transactions
APP_VERSION=1.0.0

# Alert thresholds
ALERT_ERROR_RATE_ENABLED=true
ALERT_ERROR_RATE_THRESHOLD=5.0  # Percentage
ALERT_RESPONSE_TIME_ENABLED=true
ALERT_RESPONSE_TIME_THRESHOLD=2000.0  # Milliseconds
ALERT_MEMORY_ENABLED=true
ALERT_MEMORY_THRESHOLD=80.0  # Percentage
ALERT_CIRCUIT_BREAKER_ENABLED=true

# Monitoring evaluation interval
MONITORING_EVALUATION_INTERVAL=60  # Seconds
