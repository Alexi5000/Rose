# Staging Environment Configuration
# This file contains staging-specific settings
# Deploy to Railway staging environment with these settings

# ============================================
# ENVIRONMENT
# ============================================
ENVIRONMENT=staging

# ============================================
# SERVER CONFIGURATION
# ============================================
# Railway sets PORT automatically
PORT=8080
HOST=0.0.0.0

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Restrict to staging frontend domain
# Update with your actual staging domain
ALLOWED_ORIGINS="https://staging.yourdomain.com"

# Moderate rate limiting for staging
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=20

# Enable security headers
ENABLE_SECURITY_HEADERS=true

# ============================================
# LOGGING CONFIGURATION
# ============================================
# Structured logging for staging
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# API DOCUMENTATION
# ============================================
# Enable API docs in staging for testing
ENABLE_API_DOCS=true

# ============================================
# WORKFLOW CONFIGURATION
# ============================================
# Production-like timeout
WORKFLOW_TIMEOUT_SECONDS=60

# ============================================
# RESOURCE MANAGEMENT
# ============================================
# Production-like limits
MAX_REQUEST_SIZE=10485760  # 10MB
SESSION_RETENTION_DAYS=3  # Shorter retention for staging

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Qdrant Cloud instance (staging)
# Set these in Railway environment variables
QDRANT_URL=
QDRANT_API_KEY=

# ============================================
# REQUIRED API KEYS (set in Railway)
# ============================================
GROQ_API_KEY=
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=

# ============================================
# TEXT-TO-SPEECH TUNING
# ============================================
TTS_STREAMING_LATENCY_LEVEL=0
TTS_OUTPUT_FORMAT=mp3_44100_128
TTS_USE_SPEAKER_BOOST=true
